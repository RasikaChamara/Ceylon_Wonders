<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/natwall"
    android:orientation="vertical"
    tools:context=".Nature">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="254dp"
        android:layout_height="55dp"
        android:text="@string/nature_wonders"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033" />

    <Button
        android:id="@+id/btnSin"
        android:layout_width="335dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:text="Sinharaja Rain Forest"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/btnYala"
        android:layout_width="335dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:text="Yala National Park"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSin" />

    <Button
        android:id="@+id/btnBund"
        android:layout_width="335dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:text="Bundala"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnYala"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnMee"
        android:layout_width="335dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:text="Meemure"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBund"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnAsu"
        android:layout_width="335dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:text="Asupini Falls"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMee"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="78dp"
        android:layout_height="77dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAsu"
        app:layout_constraintVertical_bias="0.928"
        app:srcCompat="@drawable/backbtn"
        android:contentDescription="@string/imgdesc"/>
</androidx.constraintlayout.widget.ConstraintLayout>