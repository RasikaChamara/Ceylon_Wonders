<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".History"
    android:background="@drawable/natwall"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="306dp"
        android:layout_height="56dp"
        android:text="Historical Wonders"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033" />

    <Button
        android:id="@+id/btnSig"
        android:layout_width="335dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:text="Sigiriya"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/btnKan"
        android:layout_width="335dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:text="Kandy Sacred City"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSig" />

    <Button
        android:id="@+id/btnGall"
        android:layout_width="335dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:text="Galle Fort"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnKan"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnAnu"
        android:layout_width="335dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:text="Anuradhapura Ancient City"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGall"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnPol"
        android:layout_width="335dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:text="Polonnaruwa Ancient City"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAnu"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="78dp"
        android:layout_height="77dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPol"
        app:layout_constraintVertical_bias="0.928"
        app:srcCompat="@drawable/backbtn"
        android:contentDescription="@string/imgdesc"/>

</androidx.constraintlayout.widget.ConstraintLayout>